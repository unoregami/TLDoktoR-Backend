{
  "manifest_version": 3,
  "name": "TLDoktoR",
  "version": "3.0",
  "description": "Summarization tool for Texts and YouTube videos with Taglish and multilingual translation.",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "download.png",
      "48": "download.png",
      "128": "download.png"
    }
  },
  "icons": {
    "16": "download.png",
    "48": "download.png",
    "128": "download.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["output.html", "output.js", "style.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
